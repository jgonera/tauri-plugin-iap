{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScribbleScan",
  "version": "0.1.4",
  "identifier": "com.scribblescan",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "scanner-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/scribbleScan/docs/**"]
      },
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost",
        "style-src": "'unsafe-inline' 'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "63QL8GKDFK"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:scribbleScan.db"]
    }
  }
}
