{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:read-all",
      "allow": [ {"path": "$APPDATA/scribbleScan"}, { "path": "$APPDATA/scribbleScan/**" }]
    },
    {
      "identifier": "fs:write-all",
      "allow": [ {"path": "$APPDATA/scribbleScan"}, { "path": "$APPDATA/scribbleScan/**" }]
    },
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://scribblescan-llm-451942241925.us-central1.run.app" }
      ]
    },
    "opener:default",
    "sharesheet:default",
    "sql:default",
    "sql:allow-execute"
  ]
}
