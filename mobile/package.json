{
  "name": "scanner-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:android": "tauri android build",
    "build:ios": "tauri ios build",
    "dev": "vite",
    "dev:android": "SHOREMAN_COLORS=always shoreman Procfile.android | tee dev.log",
    "dev:ios": "SHOREMAN_COLORS=always shoreman Procfile.ios | tee dev.log",
    "format": "npm run format:node && npm run format:kotlin && npm run format:rust",
    "format:kotlin": "cd src-tauri/gen/android && ./gradlew ktfmtFormat",
    "format:node": "eslint --fix --ext .ts src/ && NODE_OPTIONS=\"--experimental-strip-types\" prettier --write \"./**/*.{js,json,md,ts,tsx}\"",
    "format:rust": "cd src-tauri && cargo fmt",
    "lint": "npm run lint:node && npm run lint:kotlin && npm run lint:rust",
    "lint:kotlin": "cd src-tauri/gen/android && ./gradlew ktfmtCheck",
    "lint:node": "eslint --ext .ts src/ && NODE_OPTIONS=\"--experimental-strip-types\" prettier --check \"./**/*.{js,json,md,ts,tsx}\"",
    "lint:rust": "cd src-tauri && cargo fmt --check",
    "log": "tail -n 100 dev.log",
    "tauri": "tauri"
  },
  "dependencies": {
    "@buildyourwebapp/tauri-plugin-sharesheet": "^0.0.1",
    "@phosphor-icons/react": "^2.1.7",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "@tauri-apps/plugin-fs": "^2.4.1",
    "@tauri-apps/plugin-http": "^2.5.1",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@tauri-apps/plugin-sql": "^2.3.0",
    "camelcase-keys": "^9.1.3",
    "clsx": "^2.1.1",
    "modern-normalize": "^3.0.1",
    "react": "^18.3.1",
    "react-aria": "^3.40.0",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.16.0",
    "react-router": "^7.3.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "sql-template-tag": "^5.2.1",
    "tauri-plugin-iap-api": "file:lib/tauri-plugin-iap",
    "use-debounce": "^10.0.4",
    "uuid": "^11.1.0",
    "vaul": "^1.1.2",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.1",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.24.0",
    "eslint-config-jgonera": "github:jgonera/eslint-config-jgonera#main",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jabber": "^1.5.3",
    "prettier": "^3.5.2",
    "prettier-config-jgonera": "github:jgonera/prettier-config-jgonera#main",
    "stylelint": "^16.19.1",
    "stylelint-config-jgonera": "github:jgonera/stylelint-config-jgonera#main",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
